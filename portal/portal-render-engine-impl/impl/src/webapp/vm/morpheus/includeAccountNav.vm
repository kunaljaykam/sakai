                                    #end ## END of IF (${sakaiThemesEnabled} && ${themeSwitcher})

                            #end ## END of IF (${site.isMyWorkspace})

                        #end ## END of FOREACH ( $site in $tabsSites.tabsSites )

                            <li class="Mrphs-userNav__logout Mrphs-userNav__submenuitem-indented">

#header(false ${adminModel.title})
<div class="portletBody">    		
    <ul class="navIntraTool actionToolBar">
        <!-- Home Link -->
        <li>
            <span>
                <a href="../index">${rlb.searchadmin_index_search}</a>
            </span>
        </li>
        <li>
            <span class="current">
                ${rlb.jsp_admin}
            </span>
        </li>
    </ul>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                #if ( ${adminModel.enabled} )
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">${rlb.searchadmin_index_site_functions}</h3>
                        </div>
                        <div class="card-body">
                            <div class="btn-toolbar" role="toolbar">
                                #foreach( $option in ${adminModel.defaultOptions} )
                                    #if ($option.name != "${rlb.searchadmin_cmd_refreshsiteind}")
                                        <button class="btn btn-primary" onclick="window.location='${option.url}'" ${option.attributes}>${option.name}</button>
                                    #end
                                #end
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default mt-3">
                        <div class="panel-heading">
                            <h3 class="panel-title">${rlb.searchadmin_index_functions}</h3>
                        </div>
                        <div class="panel-body">
                            <div class="alert alert-info">
                                <h4><i class="fa fa-info-circle"></i> Index Types</h4>
                                <p><strong>Default Index:</strong> Contains general site content including resources, announcements, forums, wikis, lessons, and other course materials.</p>
                                <p><strong>Questions Index:</strong> Contains only assessment content from Tests &amp; Quizzes, including question text, answers, question pools, and published assessments. This is useful for faculty searching through their question banks.</p>
                            </div>
                            <form method="GET">
                                <div class="form-group">
                                    <label for="indexbuildername">Select Index Type:</label>
                                    <div class="input-group">
                                        <select name="indexbuildername" id="indexbuildername" class="form-control me-1 rounded">
                                            #foreach( $iName in ${adminModel.indexBuilderNames} )
                                                <option value="${iName}">#if($iName == "default")Default (General Content)#elseif($iName == "questions")Questions (Tests &amp; Quizzes)#{else}${iName}#end</option>
                                            #end
                                        </select>
                                        <div class="input-group-btn">
                                            #foreach( $option in ${adminModel.indexSpecificOptions} )
                                                #if ($option.name != "${rlb.searchadmin_cmd_refreshind}")
                                                    <button class="btn btn-primary" type="submit" name="command" value="${option.url}">${option.name}</button>
                                                #end
                                            #end
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                #else
                    <div class="alert alert-warning">
                        <p>${rlb.jsp_search_off_msg}</p>
                    </div>
                #end
            </div>
        </div>
    </div>
</div>
#footer()
